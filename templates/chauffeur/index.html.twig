{% extends 'base.html.twig' %}

{% block title %}Chauffeur index{% endblock %}

{% block body %}
    <h1>Chauffeur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Age</th>
                <th>Telephone</th>
                <th>Identifiant</th>
                <th>Mail</th>
                <th>Mdp</th>
                <th>Adresse</th>
                <th>Permis</th>
                <th>Cni</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chauffeur in chauffeurs %}
            <tr>
                <td>{{ chauffeur.id }}</td>
                <td>{{ chauffeur.nom }}</td>
                <td>{{ chauffeur.prenom }}</td>
                <td>{{ chauffeur.age }}</td>
                <td>{{ chauffeur.telephone }}</td>
                <td>{{ chauffeur.identifiant }}</td>
                <td>{{ chauffeur.mail }}</td>
                <td>{{ chauffeur.mdp }}</td>
                <td>{{ chauffeur.adresse }}</td>
                <td>{{ chauffeur.permis ? 'Yes' : 'No' }}</td>
                <td>{{ chauffeur.cni }}</td>
                <td>
                    <a href="{{ path('chauffeur_show', {'id': chauffeur.id}) }}">show</a>
                    <a href="{{ path('chauffeur_edit', {'id': chauffeur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('chauffeur_new') }}">Create new</a>
{% endblock %}
